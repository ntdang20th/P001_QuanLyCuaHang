<UserControl x:Class="P001_QuanLyCuaHang.MVVM.View.HangHoa_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:P001_QuanLyCuaHang.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="465" d:DesignWidth="880">
    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromBottom, Duration=0:0:0.5}">
        <Border Background="White" CornerRadius="0 0 30 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBox  materialDesign:HintAssist.Hint="Mã hàng hóa"
                                  Name="txtMaHangHoa"
                                  Grid.Row="0"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />

                        <TextBox  materialDesign:HintAssist.Hint="Tên hàng hóa"
                                  Name="txtTenHangHoa"
                                  Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                    </Grid>

                    <Grid Grid.Column="1">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <ComboBox materialDesign:HintAssist.Hint="Đơn vị tính"
                                  Name="cbbDonViTinh"
                                  Grid.Row="0"
                                  Width="200"
                                  ItemsSource="{Binding LongListToTestComboVirtualization}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                        </ComboBox>

                        <TextBox  materialDesign:HintAssist.Hint="Giá"
                                  Name="txtGia"
                                  Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                    </Grid>

                    <Grid Grid.Column="2">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBox  materialDesign:HintAssist.Hint="Số lượng tồn"
                                  Name="txtSoLuongTon"
                                  Grid.Row="0"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />

                        <TextBox  materialDesign:HintAssist.Hint="Giá bán"
                                  Name="txtGiaBan"
                                  Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                            Name="btnThem"
                            Grid.Column="0"
                            Margin="10"
                            Width="120"
                            Height="40"
                            Background="#3A5AA3"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            ToolTip="Resource name: MaterialDesignRaisedSecondaryDarkButton"
                            Content="Thêm"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                            Name="btnSua"
                            Grid.Column="1"
                            Margin="10"
                            Width="120"
                            Height="40"
                            Background="#3A5AA3"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            ToolTip="Resource name: MaterialDesignRaisedSecondaryDarkButton"
                            Content="Sửa"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                            Name="btnXoa"
                            Grid.Column="2"
                            Margin="10"
                            Width="120"
                            Height="40"
                            Background="#3A5AA3"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            ToolTip="Resource name: MaterialDesignRaisedSecondaryDarkButton"
                            Content="Xóa"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

                </Grid>

                <!--data-->
                <Grid Grid.Row="2">
                    <ListView ItemsSource="{Binding ListHangHoa}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header ="Mã hàng hóa" DisplayMemberBinding="{Binding MaHangHoa}"/>
                                <GridViewColumn Header ="Tên hàng hóa" DisplayMemberBinding="{Binding TenHangHoa}"/>
                                <GridViewColumn Header ="Đơn vị tính" DisplayMemberBinding="{Binding DonViTinh}"/>
                                <GridViewColumn Header ="Giá" DisplayMemberBinding="{Binding Gia}"/>
                                <GridViewColumn Header ="Số lượng tồn" DisplayMemberBinding="{Binding SoLuongTon}"/>
                                <GridViewColumn Header ="Giá bán" DisplayMemberBinding="{Binding GiaBan}"/>
                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>

            </Grid>
        </Border>
    </materialDesign:TransitioningContent>
</UserControl>
