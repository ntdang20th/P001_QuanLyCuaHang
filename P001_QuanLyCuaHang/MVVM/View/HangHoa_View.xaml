<UserControl x:Class="P001_QuanLyCuaHang.MVVM.View.HangHoa_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:P001_QuanLyCuaHang.MVVM.View"
             mc:Ignorable="d" 
             xmlns:viewModel="clr-namespace:P001_QuanLyCuaHang.MVVM.ViewModel"
             d:DesignHeight="560" d:DesignWidth="1020" 
             Foreground="Black">

    <UserControl.DataContext>
        <viewModel:HangViewModel/>
    </UserControl.DataContext>
    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromBottom, Duration=0:0:0.5}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <materialDesign:Card  Grid.Row="0"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                  materialDesign:ShadowAssist.ShadowEdges="Bottom,Right"
                                  Background="White"
                                  Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                  UniformCornerRadius="5"
                                  Margin="10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBox  materialDesign:HintAssist.Hint="Mã hàng hóa"
                                  Text="{Binding SelectedHang.Id}"
                                  Grid.Row="0"
                                      IsReadOnly="True"
                                  HorizontalAlignment="Center" 
                                  Foreground="Black"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />

                            <TextBox  materialDesign:HintAssist.Hint="Tên hàng hóa"
                                  Text="{Binding TenHang}"
                                  Grid.Row="1" Foreground="Black"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                        </Grid>

                        <Grid Grid.Column="1">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <ComboBox materialDesign:HintAssist.Hint="Đơn vị tính"
                                  Name="cbbDonViTinh"
                                      DisplayMemberPath="TenDonViTinh"
                                  Grid.Row="0" Foreground="Black"
                                  Width="200"
                                  ItemsSource="{Binding ListDonViTinh}"
                                  SelectedItem="{Binding SelectedDVT}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <TextBox  materialDesign:HintAssist.Hint="Giá nhập"
                                  Name="txtGia"
                                      IsReadOnly="True"
                                      Text="{Binding GiaNhap}"
                                  Grid.Row="1" Foreground="Black"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                        </Grid>

                        <Grid Grid.Column="2">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBox  materialDesign:HintAssist.Hint="Số lượng tồn"
                                  Text="{Binding Slton}"
                                  Grid.Row="0" Foreground="Black"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />

                            <TextBox  materialDesign:HintAssist.Hint="Giá bán"
                                  Text="{Binding GiaBan}"
                                  Grid.Row="1" Foreground="Black"
                                  HorizontalAlignment="Center"
                                  Width="200"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </materialDesign:Card>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource ButtonChucNang}"
                            Content="Thêm" Width="120" 
                            HorizontalAlignment="Right"
                            Grid.Column="0"
                            Command="{Binding Them_Command}"/>

                    <Button Style="{StaticResource ButtonChucNang}"
                            Content="Sửa" Width="120"
                            Grid.Column="1"
                            Command="{Binding Sua_Command}"/>

                    <Button Style="{StaticResource ButtonChucNang}"
                            Content="Xóa" Width="120" 
                            HorizontalAlignment="Left"
                            Grid.Column="2"
                            Command="{Binding Xoa_Command}"/>

                </Grid>

                <!--data-->
                <materialDesign:Card  Grid.Row="3"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                  materialDesign:ShadowAssist.ShadowEdges="Bottom,Right"
                                  Background="White"
                                  Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                  UniformCornerRadius="5"
                                  Margin="10" Padding="10">
                    <Grid Grid.Row="2">
                        <ListView ItemsSource="{Binding ListHang}" SelectedItem="{Binding SelectedHang, Mode=OneWayToSource}" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header ="Mã hàng hóa" DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header ="Tên hàng hóa" DisplayMemberBinding="{Binding TenHang}"/>
                                    <GridViewColumn Header ="Đơn vị tính" DisplayMemberBinding="{Binding DonViTinh.TenDonViTinh}"/>
                                    <GridViewColumn Header ="Số lượng tồn" DisplayMemberBinding="{Binding SoLuongTon}"/>
                                    <GridViewColumn Header ="Giá bán" DisplayMemberBinding="{Binding GiaBan}"/>
                                </GridView>
                            </ListView.View>

                        </ListView>
                    </Grid>
                </materialDesign:Card>
            </Grid>
    </materialDesign:TransitioningContent>
</UserControl>
